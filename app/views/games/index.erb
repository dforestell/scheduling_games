<h1>Games</h1>
<div class='container'>
	<ul>
	<% @games.each do |game| %>
	
		<li>
			<p>Game on <%=game.date %> <%=game.time %> <br>
			Location: <%=game.field_address %> <br>
			Host: <%=game.host.team_name %> <br>
			Opponent: <% if game.traveler %>
					<%= game.traveler.team_name %> <%end%> </p>
		</li>
	<% end %>
	</ul>
	<a id="get-host-form" href="/games/new">Host A Game</a>
</div>