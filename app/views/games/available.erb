<h1>Available Games:</h1>
<% if @games %>

  <% @games.each do |game| %>
  <ul>
    <li>
      <p>Game on <%=game.date %> <%=game.time %> <br>
      Location: <%=game.field_address %> <br>
      Host: <%=game.host.team_name %> <br>
      Opponent: <% if game.traveler %>
          <%= game.traveler.team_name %> <%end%> </p>
    </li>
  </ul>
  <% if logged_in? && current_user.id != game.host_id%>
  <form action="/games/<%=game.id%>" method="POST">
    <input type="submit" value="I'll play you">
  </form>
  <%end%>
  <% if logged_in? && current_user.id == game.host_id && game.traveler_id == nil %>
    <form action="/games/<%= game.id %>" method="POST">
      <input type="hidden" name="_method" value="DELETE">
      <input type="submit" value="Delete Game">
    </form>

  <%end%>
  <% end %>
<% end %>
  <a href="/games/new">Host A Game</a>

